apiVersion: apps/v1
kind: Deployment
metadata:
  name: demo8-server
  namespace: cn-demo
  labels:
    app: demo8
spec:
  replicas: 1
  selector:
    matchLabels:
      app: demo8
  template:
    metadata:
      labels:
        app: demo8
    spec:
      containers:
      - env:
        - name: LOG_LEVEL
          valueFrom:
            configMapKeyRef:
              name: game-demo
              key: loglevel
        name: demo8
        image: flyinpengin/demo8-server:latest
        imagePullPolicy: Always
        imagePullSecrets: cloudnative
        resources:
          limits:
            memory: 1Gi
            cpu:1
          requests:
            memory: 512Mi
            cpu:500m
        qosClass: Burstable
        ports:
        - containerPort: 8080
---
