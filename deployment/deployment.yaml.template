apiVersion: v1
kind: Pod
metadata:
  name: initial-delay
spec:
  containers:
    - env:
      - name: LOG_LEVEL
        valueFrom:
          configMapKeyRef:
            name: game-demo
            key: loglevel
    - name: demo8-server
      image: flyinpengin/demo8-server:latest
      livenessProbe:
        httpGet:
          path: /healthz
          port: 8080
          scheme: HTTP
        initialDelaySeconds: 5
        periodSeconds: 3
